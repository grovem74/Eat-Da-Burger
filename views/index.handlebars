{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}

<div class="container">
    <div class="row">
        <div class="col">
            <img src="/assets/img/burger.png" id="burger" alt="burger">
        </div>
    </div>
    <div class="row">
        <div class="col s3"></div>
        <div class="col s6 center-align">
            <h2>Eat-Da-Burger!</h2>
        </div>
        <div class="col s3"></div>
    </div>

    <div class="row">
        <div class="col s2"></div>
        <div class="col s3">
            <ol>
                {{#each burgers}}
                {{#unless devoured}}
                <li>{{{this.burger_name}}}</li>
                {{/unless}}
                {{/each}}
            </ol>
        </div>
        <div class="col s2"></div>
        <div class="col s3">
            <ol>
                {{#each burgers}}
                {{#if devoured}}
                <li>{{{this.burger_name}}}</li>
                <li></li>
                {{/if}}
                {{/each}}
            </ol>
        </div>
        <div class="col s2"></div>
    </div>

    <div class="row">
        <div class="col s4"></div>
        <div class="col s4 center-align"">
            <form class=" create-form">
            <input type="text-area" id="burgerName" name="name"><br>
            <span id="newBurger">Enter a burger you want to eat and click the "Submit" button.</span>
            <br><br>
            <a class="btn-flat blue" id="test" type="submit">Submit</a>
            {{!-- <button type="submit">Submit</button> --}}
            </form>
        </div>
        <div class="col s4"></div>
    </div>

</div>